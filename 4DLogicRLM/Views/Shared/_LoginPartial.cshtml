@using Microsoft.AspNetCore.Identity
@using _4DLogicRLM.Areas.Identity.Data
@inject SignInManager<_4DLogicRLMUser> SignInManager
@inject UserManager<_4DLogicRLMUser> UserManager

<ul class="navbar-nav navbar-nav-right" style="position:relative; float: right;">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="padding-left:20px;">
        <a  class="nav-item-child nav-item-hover" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link nav-item-child nav-item-hover">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-item-child nav-item-hover" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-item-child nav-item-hover" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>